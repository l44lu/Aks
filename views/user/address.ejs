<%- include("../../views/partials/user/profileMain") %>
<div class="row">
    <%if(userAddress){%>
      <%userAddress.address.forEach((address)=>{%>
    <div class="col-lg-6">
      <div class="card mb-3 mb-lg-0">
        <div class="card-header">
          <h5 class="mb-0"><%=address.addressType%></h5>
        </div>
        <div class="card-body" style="width:400px">
          <address>
            <%=address.name%> <br>
            <%=address.city%> <br>
            <%=address.landmark%> <br>
            <%=address.state%> <br>
            <%=address.pincode%> <br>
          </address>
          <p><%=address.phone%></p>
          <p><%=address.altPhone%></p>
          <div class="d-flex justify-content-between">
            <a href="/editAddress?id=<%=address._id%>" class="btn-small">EDIT</a>
            <a href="/deleteAddress?id=<%=address._id%>" class="btn-small" onclick="return confirm('Are you sure you want to delete this address')" style="margin-left: 110px;">DELETE</a>
          </div>
        </div>
      </div>
    </div>
    <%})%><%}else{%>
    <div class="col-lg-6">
      <div class="card mb-3 mb-lg-0">
        <div class="card-header">
          <h5 class="mb-0"></h5>
        </div>
        <div class="card-body">
          <address>No address</address>
        </div>
      </div>
    </div>
    <%}%>
    <div class="mt-4">
      <a href="/addAddress">
        <button class="btn btn-primary w-70" style="
    font-family: 'Montserrat', sans-serif;
    text-transform: uppercase;
    letter-spacing: 2px;
    padding: 10px 25px;
    font-size: 12px;
    margin-left: -4px;
    position: relative;
    top: -14px;
    right: -45px;
    margin-bottom: 1px;
    transition: all 0.3s ease;
    border-radius: 0;">
          ADD ADDRESS
        </button>
      </a>
    </div>
  </div>


  
  <%- include("../../views/partials/user/footer") %>