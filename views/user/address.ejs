<%- include("../../views/partials/user/profileMain") %>

<style>
  .address-container {
    margin: 0 -10px;
  }
  
  .address-item {
    padding: 0 10px;
  }
  
  .card {
    border: none;
    border-radius: 8px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
    margin-bottom: 20px;
    transition: all 0.3s ease;
    height: 100%;
  }
  
  .card:hover {
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    transform: translateY(-3px);
  }
  
  .card-body {
    padding: 25px;
    width: 100%;
  }
  
  .address-details {
    margin-bottom: 15px;
    font-style: normal;
    line-height: 1.6;
  }
  
  .address-line {
    display: block;
    margin-bottom: 5px;
  }
  
  .contact-info {
    margin-bottom: 20px;
  }
  
  .contact-info p {
    margin-bottom: 5px;
  }
  
  .address-actions {
    display: flex;
    justify-content: space-between;
  }
  
  .btn-small {
    font-size: 11px;
    padding: 8px 16px;
    letter-spacing: 1.5px;
    color: #1a1a1a;
    text-decoration: none;
    border: 1px solid #1a1a1a;
    display: inline-block;
    margin-right: 8px;
    transition: all 0.3s ease;
    border-radius: 3px;
    text-align: center;
  }
  
  .delete-btn {
    margin-left: auto;
    margin-right: 0;
  }
  
  .btn-small:hover {
    background-color: #1a1a1a;
    color: #fff;
    text-decoration: none;
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }
  
  .add-address-container {
    margin-top: 20px;
    display: flex;
    justify-content: flex-start;
  }
  
  .add-address-btn {
    font-family: 'Montserrat', sans-serif;
    text-transform: uppercase;
    letter-spacing: 2px;
    padding: 12px 25px;
    font-size: 12px;
    font-weight: 600;
    transition: all 0.3s ease;
    background-color: #1a1a1a;
    border-color: #1a1a1a;
    border-radius: 4px;
  }
  
  .add-address-btn:hover {
    background-color: #d4af37;
    border-color: #d4af37;
    transform: translateY(-2px);
  }
  
  .empty-address {
    font-style: italic;
    color: #888;
  }
  
  /* Responsive adjustments */
  @media (max-width: 991px) {
    .card-body {
      padding: 20px;
    }
  }
  
  @media (max-width: 767px) {
    .address-item {
      margin-bottom: 15px;
    }
    
    .add-address-container {
      justify-content: center;
    }
    
    .add-address-btn {
      width: 100%;
      max-width: 300px;
    }
  }
  
  @media (max-width: 576px) {
    .card-body {
      padding: 15px;
    }
    
    .btn-small {
      padding: 6px 12px;
      font-size: 10px;
    }
    
    .address-actions {
      flex-wrap: wrap;
    }
    
    .address-actions .btn-small {
      flex: 1;
      margin: 0 5px;
      text-align: center;
    }
    
    .address-actions .btn-small:first-child {
      margin-left: 0;
    }
    
    .address-actions .btn-small:last-child {
      margin-right: 0;
    }
  }
</style>

<div class="row address-container">
  <%if(userAddress){%>
    <%userAddress.address.forEach((address)=>{%>
      <div class="col-lg-6 col-md-6 col-sm-12 address-item">
        <div class="card mb-4">
          <div class="card-header">
            <h5 class="mb-0"><%=address.addressType%></h5>
          </div>
          <div class="card-body">
            <address class="address-details">
              <span class="address-line"><%=address.name%></span>
              <span class="address-line"><%=address.city%></span>
              <% if(address.landmark){ %><span class="address-line"><%=address.landmark%></span><% } %>
              <span class="address-line"><%=address.state%></span>
              <span class="address-line"><%=address.pincode%></span>
            </address>
            <div class="contact-info">
              <% if(address.phone){ %><p class="phone-number"><%=address.phone%></p><% } %>
              <% if(address.altPhone){ %><p class="alt-phone"><%=address.altPhone%></p><% } %>
            </div>
            <div class="address-actions">
              <a href="/editAddress?id=<%=address._id%>" class="btn-small">EDIT</a>
              <a href="/deleteAddress?id=<%=address._id%>" class="btn-small delete-btn" onclick="return confirm('Are you sure you want to delete this address')">DELETE</a>
            </div>
          </div>
        </div>
      </div>
    <%})%>
  <%}else{%>
    <div class="col-lg-12 col-md-12 col-sm-12">
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="mb-0">No Addresses Found</h5>
        </div>
        <div class="card-body">
          <address class="empty-address">No address saved yet</address>
        </div>
      </div>
    </div>
  <%}%>
</div>

<div class="add-address-container">
  <a href="/addAddress">
    <button class="btn btn-primary add-address-btn">ADD ADDRESS</button>
  </a>
</div>

