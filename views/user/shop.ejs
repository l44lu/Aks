<%- include("../../views/partials/user/header") %>

<style>
  body {
    background-color: #f8f8f8;
    color: #000000;
    margin: 0;
    padding: 0;
    letter-spacing: 0.5px;
  }

  .main-container {
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 40px;
  }

  .brand-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30px 0;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    margin-bottom: 40px;
  }

  .brand-logo {
    font-size: 36px;
    font-weight: 300;
    letter-spacing: 8px;
    color: #000000;
    text-transform: uppercase;
    flex: 1;
    text-align: center;
  }

  .header-nav {
    display: flex;
    justify-content: flex-end;
    flex: 1;
  }

  .header-icons {
    display: flex;
    gap: 30px;
    align-items: center;
  }

  .icon-btn {
    background: none;
    border: none;
    color: #000000;
    font-size: 18px;
    cursor: pointer;
    transition: color 0.3s;
  }

  .icon-btn:hover {
    color: #a11826;
  }

  .search-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.9);
    z-index: 1000;
    display: none;
    align-items: center;
    justify-content: center;
  }

  .search-popup {
    width: 60%;
    max-width: 800px;
  }

  .search-form {
    display: flex;
    align-items: center;
    border-bottom: 2px solid #ffffff;
  }

  .search-input {
    flex: 1;
    padding: 15px 0;
    font-size: 24px;
    border: none;
    outline: none;
    background: transparent;
    font-family: 'Cormorant Garamond', serif;
    letter-spacing: 2px;
    color: #ffffff;
  }

  .search-input::placeholder {
    color: rgba(255, 255, 255, 0.7);
  }

  .search-button,
  .close-search {
    padding: 15px;
    background-color: transparent;
    color: #ffffff;
    border: none;
    cursor: pointer;
    font-size: 24px;
    transition: 0.3s;
  }

  .search-button:hover,
  .close-search:hover {
    color: #a11826;
  }

  .close-search {
    position: absolute;
    top: 40px;
    right: 40px;
    font-size: 30px;
  }

  .collection-banner {
    position: relative;
    height: 400px;
    margin-bottom: 80px;
    background-color: #0f403f;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .banner-image {
    position: absolute;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.7;
  }

  .banner-content {
    position: relative;
    text-align: center;
    color: #ffffff;
    z-index: 1;
  }

  .collection-subtitle {
    font-size: 18px;
    text-transform: uppercase;
    letter-spacing: 6px;
    margin-bottom: 20px;
    font-weight: 300;
  }

  .collection-title {
    font-size: 72px;
    letter-spacing: 6px;
    text-transform: uppercase;
    margin: 0;
    font-weight: 300;
  }

  .filter-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px 0;
    margin-bottom: 50px;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  }

  .filter-toggle {
    cursor: pointer;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 2px;
    font-family: 'Montserrat', sans-serif;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .filter-toggle i {
    font-size: 16px;
  }

  .product-count {
    font-size: 14px;
    font-family: 'Montserrat', sans-serif;
    color: #555;
  }

  .sorting-options {
    font-family: 'Montserrat', sans-serif;
    font-size: 14px;
    border: none;
    background: transparent;
    padding: 8px 20px;
    cursor: pointer;
  }

  .product-list-container {
    display: flex;
    gap: 60px;
  }

  .sidebar {
    width: 280px;
    padding-right: 40px;
    border-right: 1px solid rgba(0, 0, 0, 0.1);
    font-family: 'Montserrat', sans-serif;
  }

  .sidebar h3 {
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 25px;
    color: #000000;
    font-weight: 500;
  }

  .sidebar ul {
    list-style: none;
    padding: 0;
    margin-bottom: 20pxpx;
  }

  .sidebar ul li {
    margin-bottom: 15px;
  }

  .sidebar ul li a {
    color: #555;
    text-decoration: none;
    font-size: 14px;
    transition: color 0.3s;
  }

  .sidebar ul li a:hover {
    color: #a11826;
  }

  .filter-button {
    display: block;
    width: 100%;
    background: transparent;
    text-align: left;
    border: none;
    border-bottom: 1px solid #eee;
    color: #555;
    padding: 12px 0;
    margin-bottom: 8px;
    cursor: pointer;
    font-size: 14px;
    transition: all 0.3s;
    font-family: 'Montserrat', sans-serif;
  }

  .filter-button:hover {
    color: #a11826;
  }

  .product-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 40px;
    flex-grow: 1;
  }

  .product-card {
    position: relative;
    background-color: transparent;
    padding: 0;
    text-align: left;
    transition: transform 0.4s;
    overflow: hidden;
  }

  .product-card:hover {
    transform: translateY(-10px);
  }

  .product-card img {
    width: 100%;
    height: 450px;
    object-fit: cover;
    transition: all 0.8s;
  }

  .product-card:hover img {
    transform: scale(1.05);
  }

  .product-card a {
    text-decoration: none;
    color: inherit;
  }

  .product-info {
    padding: 10px 20px;
  }

  .product-card h4 {
    font-size: 20px;
    font-weight: 350;
    margin-bottom: 8px;
    color: #000000;
  }

  .product-card p {
    font-family: 'Montserrat', sans-serif;
    font-size: 14px;
    font-weight: 300;
    margin-bottom: 0;
    color: #555;
  }

  .product-card p strike {
    color: #8f1010;
    margin-left: 10px;
    font-size: 13px;
  }

  .wishlist-btn {
    position: absolute;
    top: 20px;
    right: 20px;
    font-size: 16px;
    cursor: pointer;
    color: #ffffff;
    background: rgba(0, 0, 0, 0.5);
    border-radius: 50%;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s;
    z-index: 10;
    opacity: 0;
  }

  .product-card:hover .wishlist-btn {
    opacity: 1;
  }

  .wishlist-btn:hover {
    background: #a11826;
  }

  .product-hover-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: rgba(255, 255, 255, 0.95);
    transform: translateY(100%);
    transition: transform 0.4s ease;
    padding: 20px;
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .product-card:hover .product-hover-overlay {
    transform: translateY(0);
  }

  .quick-view-btn,
  .add-to-cart-btn {
    background-color: transparent;
    color: #000000;
    border: 1px solid #000000;
    padding: 12px 15px;
    cursor: pointer;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 2px;
    width: 100%;
    transition: all 0.3s;
    font-family: 'Montserrat', sans-serif;
  }

  .add-to-cart-btn {
    background-color: #000000;
    color: #ffffff;
    border: 1px solid #000000;
  }

  .quick-view-btn:hover {
    background-color: #000000;
    color: #ffffff;
  }

  .add-to-cart-btn:hover {
    background-color: #a11826;
    border-color: #a11826;
  }

  .pagination-container {
    padding: 80px 0 40px;
    border-top: 1px solid rgba(0, 0, 0, 0.1);
    margin-top: 80px;
  }

  .pagination {
    display: flex;
    justify-content: center;
    gap: 10px;
    font-family: 'Montserrat', sans-serif;
  }

  .pagination a {
    padding: 12px 18px;
    background-color: transparent;
    color: #000000;
    text-decoration: none;
    transition: all 0.3s;
    font-size: 14px;
    font-weight: 300;
  }

  .pagination .active {
    border-bottom: 1px solid #000000;
    font-weight: 500;
  }

  .pagination a:hover:not(.active) {
    color: #a11826;
  }

  .newsletter-section {
    background-color: #f0f0f0;
    padding: 80px 0;
    margin-top: 80px;
    text-align: center;
  }

  .newsletter-content {
    max-width: 600px;
    margin: 0 auto;
  }

  .newsletter-title {
    font-family: 'Cormorant Garamond', serif;
    font-size: 32px;
    font-weight: 400;
    margin-bottom: 15px;
  }

  .newsletter-text {
    font-family: 'Montserrat', sans-serif;
    font-size: 14px;
    margin-bottom: 30px;
    color: #555;
  }

  .newsletter-form {
    display: flex;
    border-bottom: 1px solid #000000;
    max-width: 400px;
    margin: 0 auto;
  }

  .newsletter-input {
    flex: 1;
    padding: 12px 0;
    font-size: 14px;
    border: none;
    outline: none;
    background: transparent;
    font-family: 'Montserrat', sans-serif;
  }

  .newsletter-button {
    background-color: transparent;
    color: #000000;
    border: none;
    padding: 12px 0;
    cursor: pointer;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 2px;
    font-family: 'Montserrat', sans-serif;
    transition: color 0.3s;
  }

  .newsletter-button:hover {
    color: #a11826;
  }

  @media (max-width: 1200px) {
    .product-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .product-list-container {
      flex-direction: column;
    }

    .sidebar {
      width: 100%;
      border-right: none;
      padding-right: 0;
      padding-bottom: 30px;
      border-bottom: 1px solid rgba(0, 0, 0, 0.1);
      margin-bottom: 30px;
    }

    .product-grid {
      grid-template-columns: repeat(1, 1fr);
    }

    .collection-title {
      font-size: 40px;
    }
  }
  .refresh-button {
    display: inline-block;
    background-color: transparent;
    color: #494949;
    border: 2px solid #585858;
    padding: 12px 24px;
    font-size: 10px;
    font-weight: 600;
    cursor: pointer;
    margin-top: 10px;
    margin-bottom: 75px;
    padding: 11px;
    transition: all 0.3sease -in-out;
    text-transform: uppercase;
    letter-spacing: 1px;
    outline: none;
}
.refresh-button:hover {
  border-color: #d49100;
  color: #000000;
  transform: translateY(-2px);
  box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
}


</style>
<div class="main-container">
  <div class="search-container" id="search-popup">
    <button class="close-search" id="close-search">
      <i class="fas fa-times"></i>
    </button>
    <div class="search-popup">
      <form action="" method="GET" class="search-form">
        <input type="text" name="query" placeholder="Search the collection..." class="search-input" />
        <button type="submit" class="search-button">
          <i class="fas fa-search"></i>
        </button>
      </form>
    </div>
  </div>

  <div class="collection-banner">
    <div class="banner-image"></div>
    <div class="banner-content">
      <p class="collection-subtitle">Discover the latest</p>
      <h1 class="collection-title" style="color: #cacaca;">Fall/Winter</h1>
    </div>
  </div>

  <div class="filter-bar">
    <div class="filter-toggle">
      <i class="fas fa-sliders-h"></i> Filter
    </div>
    <select class="sorting-options" id="sortSelect">
      <option value="">Sort by: Featured</option>
      <option value="low">Price: Low to High</option>
      <option value="high">Price: High to Low</option>
      <option value="newest">Newest</option>
    </select>
  </div>

  <section class="shop-page">
    <div class="product-list-container">
      <aside class="sidebar">
        <h3>Categories</h3>
        <ul>
          <% if (category && category.length > 0) { %>
            <% for (let i = 0; i < category.length; i++) { %>
              <li>
                <a href="#" class="category-filter" data-category="<%= category[i]._id %>">
                  <%= category[i].name %>
                </a>
              </li>
            <% } %>
          <% } else { %>
            <li>No categories available</li>
          <% } %>
        </ul>
        <button class="refresh-button" id="refreshCategories">Refresh</button> 

        <h3>Price Range</h3>
        <div>
          <button class="filter-button price-filter" data-min="0" data-max="5000">Under ₹5,000</button>
          <button class="filter-button price-filter" data-min="5000" data-max="10000">₹5,000 - ₹10,000</button>
          <button class="filter-button price-filter" data-min="10000" data-max="15000">₹10,000 - ₹15,000</button>
          <button class="filter-button price-filter" data-min="15000">Above ₹15,000</button>
        </div>
        <button class="refresh-button" id="refreshPrice">Refresh</button>
      </aside>

      <main class="product-grid" id="product-grid">
        <% for (let i = product.length-1; i >= 0; i--) { %>
            <div class="product-card">
                <button class="wishlist-btn" onclick="toggleWishlist(event, '<%= product[i]._id %>')">
                    <i class="far fa-heart"></i>
                </button>            
                <a href="/productDetails?id=<%= product[i]._id %>">
                    <img src="<%= product[i].productImage[0].replace('_', '_/') %>" alt="<%= product[i].productName %>" />
                    <div class="product-hover-overlay">
                        <button class="quick-view-btn">Quick View</button>
                        <button class="action-btn add-to-cart-btn" onclick="addToCart('<%=product[i]._id%>')">
                          <i class="fas fa-shopping-cart"></i>
                          Add to Cart
                        </button>
                    </div>
                </a>
                <div class="product-info">
                    <h4><%= product[i].productName %></h4>
                    <p>₹<%= product[i].salePrice %> <strike>₹<%= product[i].regularPrice %></strike></p>
    
                    <div class="rating">
                        <% let rating = Math.round(product[i].rating || 0); %> 
                        <% for (let j = 0; j < 5; j++) { %>
                            <% if (j < rating) { %>
                                <i class="fas fa-star"></i> 
                            <% } else { %>
                                <i class="far fa-star"></i> 
                            <% } %>
                        <% } %>
                        <span>(<%= product[i].rating || "No Ratings" %>)</span> 
                    </div>
                </div>
            </div>
        <% } %>
    </main>
    
    </div>
  </section>

  <div class="pagination-container">
    <div class="pagination">
      <% if (currentPage > 1) { %>
        <a href="/shop?page=<%= currentPage - 1 %>">Previous</a>
      <% } %>
      <% for (let i = 1; i <= totalPage; i++) { %>
        <a class="<%= currentPage === i ? 'active' : '' %>" href="/shop?page=<%= i %>"><%= i %></a>
      <% } %>
      <% if (currentPage < totalPage) { %>
        <a href="/shop?page=<%= currentPage + 1 %>">Next</a>
      <% } %>
    </div>
  </div>
</div>

<script>
  document.querySelectorAll('.category-filter').forEach(item => {
    item.addEventListener('click', function (event) {
      event.preventDefault();
      const categoryId = this.dataset.category;
      window.location.href = `/shop?category=${categoryId}`;
    });
  });
  document.querySelectorAll('.price-filter').forEach(item => {
    item.addEventListener('click', function () {
      const min = this.dataset.min;
      const max = this.dataset.max || '';
      window.location.href = `/shop?minPrice=${min}&maxPrice=${max}`;
    });
  });

  document.getElementById('sortSelect').addEventListener('change', function () {
    const sortValue = this.value;
    const urlParams = new URLSearchParams(window.location.search);
    urlParams.set('sort', sortValue);
    window.location.search = urlParams.toString();
  });
  document.getElementById('refreshCategories').addEventListener('click', function () {
    window.location.href = "/shop";
  });
  document.getElementById('refreshPrice').addEventListener('click', function () {
    window.location.href = "/shop";
  });

function addToCart(productId){
  $.ajax({
    url:"/addToCart",
    method:"POST",
    data:{productId:productId},
    success:(response)=>{
      if(response.status){
        Swal.fire({
          title:"Added to Cart",
          text:response.message,
          icon:"success",
          showCancelButtonText:"Cart",
          cancelButtonText:"OK",
          timer:2000
        }).then((result)=>{
          if(result.isConfirmed){
            windows.location.href="/cart";
          }else{
            location.reload();
          }
        });
      }else{
        
        Swal.fire({
          title:"Error",
          text:response.message||"Unable to add this to Cart",
          icon:"error",
          timer:2000,
          showConfirmButton:false
        });
      }
    },
    error:(xhr)=>{
      if(xhr.status===401){
        handleAuthError(
          "Not logged In",
          "You need to log in to add item to your cart."
        );
      }else{
        Swal.fire({
          title:"Error",
          text:"Stock limit reached ot maximum 5 item per user",
          icon:"error",
          timer:2000,
          showConfirmButton:false
        });
      }
    }
  });
}

</script>


