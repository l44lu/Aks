<%- include("../../views/partials/user/header") %>

<style>
  body {
    background-color: #fafafa;
    color: #111;
    margin: 0;
    padding: 0;
    font-family: 'Cormorant Garamond', serif;
    letter-spacing: 0.5px;
  }

  .main-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 40px;
  }

  .brand-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30px 0;
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    margin-bottom: 0;
  }

  .brand-logo {
    font-size: 36px;
    font-weight: 300;
    letter-spacing: 8px;
    color: #000000;
    text-transform: uppercase;
    flex: 1;
    text-align: center;
  }

  .header-nav {
    display: flex;
    justify-content: flex-end;
    flex: 1;
  }

  .header-icons {
    display: flex;
    gap: 30px;
    align-items: center;
  }

  .icon-btn {
    background: none;
    border: none;
    color: #000000;
    font-size: 18px;
    cursor: pointer;
    transition: color 0.3s;
  }

  .icon-btn:hover {
    color: #a11826;
  }

  .search-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.9);
    z-index: 1000;
    display: none;
    align-items: center;
    justify-content: center;
  }

  .search-popup {
    width: 60%;
    max-width: 800px;
  }

  .search-form {
    display: flex;
    align-items: center;
    border-bottom: 2px solid #ffffff;
  }

  .search-input {
    flex: 1;
    padding: 15px 0;
    font-size: 24px;
    border: none;
    outline: none;
    background: transparent;
    letter-spacing: 2px;
    color: #ffffff;
  }

  .search-input::placeholder {
    color: rgba(255, 255, 255, 0.7);
  }

  .search-button,
  .close-search {
    padding: 15px;
    background-color: transparent;
    color: #ffffff;
    border: none;
    cursor: pointer;
    font-size: 24px;
    transition: 0.3s;
  }

  .search-button:hover,
  .close-search:hover {
    color: #a11826;
  }

  .close-search {
    position: absolute;
    top: 40px;
    right: 40px;
    font-size: 30px;
  }

  .collection-banner {
    position: relative;
    height: 500px;
    margin-bottom: 60px;
    background-color: #0f0f0f;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .banner-image {
    position: absolute;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.8;
    background-image: url('/api/placeholder/1400/500');
    background-size: cover;
    background-position: center;
  }

  .banner-content {
    position: relative;
    text-align: center;
    color: #ffffff;
    z-index: 1;
  }

  .collection-subtitle {
    font-size: 18px;
    text-transform: uppercase;
    letter-spacing: 6px;
    margin-bottom: 20px;
    font-weight: 300;
  }

  .collection-title {
    font-size: 72px;
    letter-spacing: 8px;
    text-transform: uppercase;
    margin: 0;
    color: aliceblue;
    font-weight: 100;
  }

  .sort-options {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    padding: 20px 0;
    margin-bottom: 30px;
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  }

  .sort-options label {
    font-family: 'Montserrat', sans-serif;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-right: 15px;
    color: #333;
  }

  #sortSelect {
    font-family: 'Montserrat', sans-serif;
    font-size: 14px;
    border: none;
    background: transparent;
    padding: 10px 30px 10px 15px;
    cursor: pointer;
    appearance: none;
    background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'%3e%3cpolyline points='6 9 12 15 18 9'%3e%3c/polyline%3e%3c/svg%3e");
    background-repeat: no-repeat;
    background-position: right 5px center;
    background-size: 15px;
    border-bottom: 1px solid #ddd;
    transition: all 0.3s;
  }

  #sortSelect:focus {
    outline: none;
    border-color: #000;
  }

  .product-list-container {
    display: flex;
    gap: 60px;
  }

  .sidebar {
    width: 260px;
    padding-right: 40px;
    font-family: 'Montserrat', sans-serif;
  }

  .sidebar h3 {
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin: 0 0 25px;
    color: #000000;
    font-weight: 500;
    position: relative;
    padding-bottom: 12px;
  }

  .sidebar h3::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 30px;
    height: 1px;
    background-color: #000;
  }

  .sidebar ul {
    list-style: none;
    padding: 0;
    margin: 0 0 30px;
  }

  .sidebar ul li {
    margin-bottom: 15px;
  }

  .sidebar ul li a {
    color: #555;
    text-decoration: none;
    font-size: 14px;
    transition: color 0.3s;
    display: block;
    padding: 5px 0;
  }

  .sidebar ul li a:hover {
    color: #a11826;
  }

  .filter-button {
    display: block;
    width: 100%;
    background: transparent;
    text-align: left;
    border: none;
    border-bottom: 1px solid #eee;
    color: #555;
    padding: 12px 0;
    margin-bottom: 8px;
    cursor: pointer;
    font-size: 14px;
    transition: all 0.3s;
    font-family: 'Montserrat', sans-serif;
  }

  .filter-button:hover {
    color: #a11826;
  }

  .refresh-button {
    display: inline-block;
    background-color: transparent;
    color: #333;
    border: 1px solid #333;
    padding: 8px 15px;
    font-size: 10px;
    font-weight: 500;
    cursor: pointer;
    margin: 5px 0 30px;
    transition: all 0.3s;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-family: 'Montserrat', sans-serif;
  }

  .refresh-button:hover {
    background-color: #000;
    color: #fff;
    transform: translateY(-2px);
  }

  .product-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
    flex-grow: 1;
  }

  .product-card {
    position: relative;
    background-color: transparent;
    padding: 0;
    text-align: left;
    transition: transform 0.4s;
    overflow: hidden;
    margin-bottom: 15px;
  }

  .product-card:hover {
    transform: translateY(-5px);
  }

  .product-card img {
    width: 100%;
    height: 400px;
    object-fit: cover;
    transition: all 0.8s;
  }

  .product-card:hover img {
    transform: scale(1.05);
  }

  .product-card a {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .product-info {
    padding: 15px 5px;
  }

  .product-card h4 {
    font-size: 18px;
    font-weight: 400;
    margin: 0 0 8px;
    color: #000000;
    font-family: 'Cormorant Garamond', serif;
  }

  .product-card p {
    font-family: 'Montserrat', sans-serif;
    font-size: 14px;
    font-weight: 400;
    margin: 0;
    color: #555;
  }

  .product-card p strike {
    color: #a11826;
    margin-left: 10px;
    font-size: 13px;
    opacity: 0.8;
  }

  .wishlist-btn {
    position: absolute;
    top: 20px;
    right: 20px;
    font-size: 16px;
    cursor: pointer;
    color: #ffffff;
    background: rgba(0, 0, 0, 0.6);
    border-radius: 50%;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s;
    z-index: 10;
    opacity: 0;
    border: none;
  }

  .product-card:hover .wishlist-btn {
    opacity: 1;
  }

  .wishlist-btn:hover {
    background: #a11826;
  }

  .product-hover-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: rgba(255, 255, 255, 0.95);
    transform: translateY(100%);
    transition: transform 0.4s ease;
    padding: 20px;
    display: flex;
    flex-direction: column;
    gap: 10px;
    z-index: 5;
  }

  .product-card:hover .product-hover-overlay {
    transform: translateY(0);
  }

  .quick-view-btn,
  .add-to-cart-btn {
    background-color: transparent;
    color: #000000;
    border: 1px solid #000000;
    padding: 12px 15px;
    cursor: pointer;
    font-size: 11px;
    text-transform: uppercase;
    letter-spacing: 2px;
    width: 100%;
    transition: all 0.3s;
    font-family: 'Montserrat', sans-serif;
    font-weight: 500;
  }

  .add-to-cart-btn {
    background-color: #000000;
    color: #ffffff;
    border: 1px solid #000000;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
  }

  .quick-view-btn:hover {
    background-color: #000000;
    color: #ffffff;
  }

  .add-to-cart-btn:hover {
    background-color: #a11826;
    border-color: #a11826;
  }

  .pagination-container {
    padding: 60px 0 40px;
    border-top: 1px solid rgba(0, 0, 0, 0.05);
    margin-top: 60px;
  }

  .pagination {
    display: flex;
    justify-content: center;
    gap: 5px;
    font-family: 'Montserrat', sans-serif;
  }

  .pagination a {
    padding: 8px 15px;
    background-color: transparent;
    color: #000000;
    text-decoration: none;
    transition: all 0.3s;
    font-size: 13px;
    font-weight: 400;
    border: 1px solid transparent;
  }

  .pagination .active {
    border: 1px solid #000000;
    font-weight: 500;
  }

  .pagination a:hover:not(.active) {
    color: #a11826;
  }

  /* Global search styles - improved */
  .global-search-container {
    width: 100%;
    margin-bottom: 30px;
  }
  
  .global-search-form {
    display: flex;
    border: 1px solid #ddd;
    overflow: hidden;
    transition: all 0.3s ease;
  }
  
  .global-search-form:focus-within {
    border-color: #a11826;
  }
  
  .global-search-input {
    flex: 1;
    padding: 12px 15px;
    font-size: 13px;
    border: none;
    outline: none;
    background: #fff;
    font-family: 'Montserrat', sans-serif;
  }
  
  .global-search-button {
    background-color: #000000;
    color: #ffffff;
    border: none;
    padding: 0 15px;
    cursor: pointer;
    font-size: 14px;
    transition: background-color 0.3s;
  }
  
  .global-search-button:hover {
    background-color: #a11826;
  }

  @media (max-width: 1200px) {
    .product-grid {
      grid-template-columns: repeat(2, 1fr);
    }
    
    .main-container {
      padding: 0 30px;
    }
  }

  @media (max-width: 768px) {
    .product-list-container {
      flex-direction: column;
    }

    .sidebar {
      width: 100%;
      border-right: none;
      padding-right: 0;
      padding-bottom: 30px;
      border-bottom: 1px solid rgba(0, 0, 0, 0.1);
      margin-bottom: 30px;
    }

    .product-grid {
      grid-template-columns: repeat(1, 1fr);
    }

    .collection-title {
      font-size: 40px;
    }
    
    .main-container {
      padding: 0 20px;
    }
  }
</style>

<div class="main-container">
  <div class="search-container" id="search-popup">
    <button class="close-search" id="close-search">
      <i class="fas fa-times"></i>
    </button>
    <div class="search-popup">
      <form action="/search" method="GET" class="search-form">
        <input type="text" name="query" placeholder="Search our collection..." class="search-input" />
        <button type="submit" class="search-button">
          <i class="fas fa-search"></i>
        </button>
      </form>
    </div>
  </div>

  <div class="collection-banner">
    <div class="banner-image"></div>
    <div class="banner-content">
      <p class="collection-subtitle">Discover the latest</p>
      <h1 class="collection-title">Fall/Winter Collection</h1>
    </div>
  </div>

  <div class="sort-options">
    <label for="sortSelect">Sort By:</label>
    <select id="sortSelect" onchange="applySort()">
      <option value="newest" <%= sort === 'newest' ? 'selected' : '' %>>Newest Arrivals</option>
      <option value="low" <%= sort === 'low' ? 'selected' : '' %>>Price: High to Low</option>
      <option value="high" <%= sort === 'high' ? 'selected' : '' %>>Price: Low to High</option>
  </select>
  </div>

  <section class="shop-page">
    <div class="product-list-container">
      
      <aside class="sidebar">
        <!-- Global Search Feature -->
        <div class="global-search-container">
          <form action="/search" method="post" class="global-search-form">
            <input type="text" name="query" placeholder="Search products..." class="global-search-input" />
            <button type="submit" class="global-search-button">
              <i class="fas fa-search"></i>
            </button>
          </form>
        </div>
      
        <h3>Categories</h3>
        <ul>
          <% if (category && category.length > 0) { %>
            <% for (let i = 0; i < category.length; i++) { %>
              <li>
                <a href="#" class="category-filter" data-category="<%= category[i]._id %>">
                  <%= category[i].name %>
                </a>
              </li>
            <% } %>
          <% } else { %>
            <li>No categories available</li>
          <% } %>
        </ul>
        <button class="refresh-button" id="refreshCategories">Reset Categories</button> 

        <h3>Price Range</h3>
        <div>
          <button class="filter-button price-filter" data-min="0" data-max="5000">Under ₹5,000</button>
          <button class="filter-button price-filter" data-min="5000" data-max="10000">₹5,000 - ₹10,000</button>
          <button class="filter-button price-filter" data-min="10000" data-max="15000">₹10,000 - ₹15,000</button>
          <button class="filter-button price-filter" data-min="15000">Above ₹15,000</button>
        </div>
        <button class="refresh-button" id="refreshPrice">Reset Filters</button>
      </aside>

      <main class="product-grid" id="product-grid">
        <% for (let i = 0; i < product.length; i++) { %>
          <div class="product-card">
              <button class="wishlist-btn" data-product-id="<%= product[i]._id %>" onclick="addToWishlist('<%=product[i]._id%>')">
                <i class="fas fa-heart"></i>
              </button>           
                <a href="/productDetails?id=<%= product[i]._id %>">
                    <img src="<%= product[i].productImage[0].replace('_', '_/') %>" alt="<%= product[i].productName %>" />
                    <div class="product-hover-overlay">
                        <button class="quick-view-btn">Quick View</button>
                        <button class="add-to-cart-btn" onclick="addToCart('<%=product[i]._id%>')">
                          <i class="fas fa-shopping-cart"></i>
                          Add to Cart
                        </button>
                    </div>
                </a>
                <div class="product-info">
                    <h4><%= product[i].productName %></h4>
                    <p>₹<%= product[i].salePrice %> <strike>₹<%= product[i].regularPrice %></strike></p> 
                </div>
            </div>
        <% } %>
      </main>
    </div>
  </section>

  <div class="pagination-container">
    <div class="pagination">
      <% if (currentPage > 1) { %>
        <a href="/shop?page=<%= currentPage - 1 %><%= locals.search ? '&search=' + search : '' %><%= locals.category ? '&category=' + category : '' %><%= locals.minPrice ? '&minPrice=' + minPrice : '' %><%= locals.maxPrice ? '&maxPrice=' + maxPrice : '' %><%= locals.sort ? '&sort=' + sort : '' %>">Previous</a>
      <% } %>
      <% for (let i = 1; i <= totalPage; i++) { %>
        <a class="<%= currentPage === i ? 'active' : '' %>" href="/shop?page=<%= i %><%= locals.search ? '&search=' + search : '' %><%= locals.category ? '&category=' + category : '' %><%= locals.minPrice ? '&minPrice=' + minPrice : '' %><%= locals.maxPrice ? '&maxPrice=' + maxPrice : '' %><%= locals.sort ? '&sort=' + sort : '' %>"><%= i %></a>
      <% } %>
      <% if (currentPage < totalPage) { %>
        <a href="/shop?page=<%= currentPage + 1 %><%= locals.search ? '&search=' + search : '' %><%= locals.category ? '&category=' + category : '' %><%= locals.minPrice ? '&minPrice=' + minPrice : '' %><%= locals.maxPrice ? '&maxPrice=' + maxPrice : '' %><%= locals.sort ? '&sort=' + sort : '' %>">Next</a>
      <% } %>
    </div>
  </div>
</div>

<script>
  function applySort() {
      let sortValue = document.getElementById("sortSelect").value;
      let urlParams = new URLSearchParams(window.location.search);
      urlParams.set("sort", sortValue);
      window.location.href = window.location.pathname + "?" + urlParams.toString();
  }

  function addToWishlist(productId) {
    $.ajax({
      url: "/addToWishlist",
      method: "POST",
      data: {productId: productId},
      success: (response) => {
        Swal.fire({
          title: response.status ? "Added to Wishlist" : "Already in Wishlist",
          text: response.status 
            ? "This item has been added to your wishlist."
            : response.message || "This item is already in your wishlist.",      
          icon: response.status ? "success" : "info",
          showConfirmButton: false,
          timer: 2000,
          toast: true,
          position: "top-end",
          iconColor: response.status ? "#a11826" : "#777",
          customClass: response.status ? "swal-success" : "swal-warning",  
        });
      },
      error: () => {
        Swal.fire({
          title: "Something went wrong",
          text: "Unable to add this item to your wishlist",
          icon: "error",
          confirmButtonText: "OK",
          iconColor: "#a11826",
          customClass: "swal-error",
        });
      },
    });
  }

  document.querySelectorAll('.category-filter').forEach(item => {
    item.addEventListener('click', function (event) {
      event.preventDefault();
      const categoryId = this.dataset.category;
      
      // Preserve existing parameters
      const urlParams = new URLSearchParams(window.location.search);
      const searchQuery = urlParams.get('search');
      const sortValue = urlParams.get('sort');
      
      let newUrl = `/shop?category=${categoryId}`;
      if (searchQuery) {
        newUrl += `&search=${searchQuery}`;
      }
      if (sortValue) {
        newUrl += `&sort=${sortValue}`;
      }
      
      window.location.href = newUrl;
    });
  });
  
  document.querySelectorAll('.price-filter').forEach(item => {
    item.addEventListener('click', function () {
      const min = this.dataset.min;
      const max = this.dataset.max || '';
      
      // Preserve existing parameters
      const urlParams = new URLSearchParams(window.location.search);
      const searchQuery = urlParams.get('search');
      const categoryId = urlParams.get('category');
      const sortValue = urlParams.get('sort');
      
      let newUrl = `/shop?minPrice=${min}&maxPrice=${max}`;
      if (searchQuery) {
        newUrl += `&search=${searchQuery}`;
      }
      if (categoryId) {
        newUrl += `&category=${categoryId}`;
      }
      if (sortValue) {
        newUrl += `&sort=${sortValue}`;
      }
      
      window.location.href = newUrl;
    });
  });

  document.getElementById('refreshCategories').addEventListener('click', function () {
    // Preserve search parameter and sort if they exist
    const urlParams = new URLSearchParams(window.location.search);
    const searchQuery = urlParams.get('search');
    const sortValue = urlParams.get('sort');
    const minPrice = urlParams.get('minPrice');
    const maxPrice = urlParams.get('maxPrice');
    
    let newUrl = "/shop";
    const params = [];
    
    if (searchQuery) {
      params.push(`search=${searchQuery}`);
    }
    if (sortValue) {
      params.push(`sort=${sortValue}`);
    }
    if (minPrice) {
      params.push(`minPrice=${minPrice}`);
    }
    if (maxPrice) {
      params.push(`maxPrice=${maxPrice}`);
    }
    
    if (params.length > 0) {
      newUrl += "?" + params.join("&");
    }
    
    window.location.href = newUrl;
  });
  
  document.getElementById('refreshPrice').addEventListener('click', function () {
    // Preserve search parameter, category and sort if they exist
    const urlParams = new URLSearchParams(window.location.search);
    const searchQuery = urlParams.get('search');
    const categoryId = urlParams.get('category');
    const sortValue = urlParams.get('sort');
    
    let newUrl = "/shop";
    const params = [];
    
    if (searchQuery) {
      params.push(`search=${searchQuery}`);
    }
    if (categoryId) {
      params.push(`category=${categoryId}`);
    }
    if (sortValue) {
      params.push(`sort=${sortValue}`);
    }
    
    if (params.length > 0) {
      newUrl += "?" + params.join("&");
    }
    
    window.location.href = newUrl;
  });

  function addToCart(productId) {
    $.ajax({
      url: "/addToCart",
      method: "POST",
      data: {productId: productId},
      success: (response) => {
        if(response.status) {
          Swal.fire({
            title: "Added to Cart",
            text: response.message,
            icon: "success",
            showConfirmButton: true,
            confirmButtonText: "View Cart",
            showCancelButton: true,
            cancelButtonText: "Continue Shopping",
            confirmButtonColor: "#000",
            cancelButtonColor: "#555",
          }).then((result) => {
            if(result.isConfirmed) {
              window.location.href="/cart";
            }
          });
        } else {
          Swal.fire({
            title: "Notice",
            text: response.message || "Unable to add this item to your cart",
            icon: "info",
            timer: 2000,
            showConfirmButton: false
          });
        }
      },
      error: (xhr) => {
        if(xhr.status === 401) {
          Swal.fire({
            title: "Sign In Required",
            text: "Please sign in to add items to your cart",
            icon: "info",
            confirmButtonText: "Sign In",
            confirmButtonColor: "#000",
            showCancelButton: true,
            cancelButtonText: "Cancel",
          }).then((result) => {
            if(result.isConfirmed) {
              window.location.href = "/login";
            }
          });
        } else {
          Swal.fire({
            title: "Notice",
            text: "You've reached the maximum limit for this item",
            icon: "info",
            timer: 2000,
            showConfirmButton: false
          });
        }
      }
    });
  }

  // Show/hide search popup
  document.getElementById('open-search').addEventListener('click', function() {
    document.getElementById('search-popup').style.display = 'flex';
  });
  
  document.getElementById('close-search').addEventListener('click', function() {
    document.getElementById('search-popup').style.display = 'none';
