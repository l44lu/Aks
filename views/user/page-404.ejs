        }
        p{
            color: gray;
            margin-bottom: 20px;
            font-size: 30px;
            padding-bottom: 10px;
        }

        button {
            background-color: rgb(0, 0, 0);
            color: antiquewhite;
            border: none;
            padding: 28px 52px;
            border-radius: 60px;
            cursor: pointer;
            transition: background-color 0.3s;
            font-size: 26px;
        }
        button:hover{
            background-color: rgb(73, 73, 73);

        }
        button:focus{
            outline:none;
            box-shadow: 0 0 3px rgba(87, 87, 87, 0.5);
        }
        @media(max-width:600px){
            body{
                padding:10px
            }
            button{
                width: 100%;
                padding:15px;
