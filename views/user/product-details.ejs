<div class="breadcrumbs">
    <div class="container">
        <ul class="breadcrumb-list">
            <li><a href="/">HOME</a></li>
            <li><a href="/shop">COLLECTIONS</a></li>
            <li><a href="/shop/<%= category.slug %>"><%= category.name.toUpperCase() %></a></li>
            <li><%= product.productName.toUpperCase() %></li>
        </ul>
    </div>
</div>

<section class="product-section">
    <div class="container">
        <div class="product-grid">
            <div class="gallery">
                <div class="main-image">
                    <div class="zoom-icon">
                        <i class="fas fa-expand"></i>
                    </div>
                    <div class="image-slider">
                        <% if (product.productImage && Array.isArray(product.productImage)) { %>
                            <% product.productImage.forEach((img, index) => { %>
                                <figure class="<%= index === 0 ? 'active' : '' %>">
                                    <div class="zoom-container">
                                        <div class="zoom-lens"></div>
                                        <img src="<%= img.replace('_', '_/') %>" alt="<%= product.productName %> Image">
                                        <div class="zoomed-image"></div>
                                    </div>
                                </figure>
                            <% }) %>
                        <% } else { %>
                            <figure class="active">
                                <div class="zoom-container">
                                    <div class="zoom-lens"></div>
                                    <img src="default.jpg" alt="Default Image">
                                    <div class="zoomed-image"></div>
                                </div>
                            </figure>
                        <% } %>
                    </div>
                </div>
                <div class="thumbnails">
                    <% if (product.productImage && Array.isArray(product.productImage)) { %>
                        <% product.productImage.forEach((img, index) => { %>
                            <div class="<%= index === 0 ? 'active' : '' %>">
                                <img src="<%= img.replace('_', '_/') %>" alt="Thumbnail">
                            </div>
                        <% }) %>
                    <% } %>
                </div>
            </div>
            <div class="product-info">
                <h1 class="product-title"><%= product.productName %></h1>
                <div class="price">
                    <span class="current"><%= product.salePrice %></span>
                    <span class="old"><%= product.regularPrice %></span>
                    <span class="offer">
                        <% if (!totalOffer) { %>
                            LIMITED EDITION
                        <% } else { %>
                            <%= totalOffer %>% OFF
                        <% } %>
                    </span>
                </div>
                <p class="description"><%= product.description %></p>
                
                <!-- Size Selection -->
                <div class="size-section">
                    <div class="size-title">
                      SIZE
                    </div>
                    <div class="size-options">
                      <% sizes.forEach(sizeData => { %>
                        <% if (sizeData.quantity > 0) { %>
                          <button class="size-option" 
                                  data-size="<%= sizeData.size %>" 
                                  data-quantity="<%= sizeData.quantity %>" 
                                  onclick="selectSize(this)">
                            <%= sizeData.size %>
                            <span class="stock"><%= sizeData.quantity %></span>
                          </button>
                        <% } %>
                      <% }); %>
                    </div>
                </div>

                <ul class="features">
                    <li><i class="fas fa-certificate"></i> AUTHENTIC ARTISANAL CRAFTSMANSHIP</li>
                    <li><i class="fas fa-sync-alt"></i> COMPLIMENTARY 30-DAY RETURNS</li>
                    <li><i class="fas fa-plane"></i> PRIORITY INTERNATIONAL SHIPPING</li>
                </ul>
                <div class="actions">
                    <div class="quantity">
                        <a href="#" class="decrease"><i class="fas fa-minus"></i></a>
                        <span id="quantity">1</span>
                        <a href="#" class="increase"><i class="fas fa-plus"></i></a>
                    </div>
                    <button class="button-add-to-cart" onclick="addToCart(event, '<%= product._id %>', '<%= product.salePrice %>')">
                        ADD TO SHOPPING BAG
                    </button>
                    <button class="button-wishlist" onclick="addToWishlist('<%= product._id %>')">
                        <i class="fas fa-heart"></i>
                    </button>
                </div>
                <ul class="meta">
                    <li><strong>REFERENCE</strong> <span>FWM15VKT</span></li>
                    <li><strong>COLLECTION</strong> <span><%= category.name.toUpperCase() %></span></li>
                    <li><strong>AVAILABILITY</strong> 
                        <span>
                            <% sizes.forEach(sizeData => { %>
                                <%= sizeData.size %> 
                            <% if (sizeData.quantity > 10) { %>
                                <span class="stock-badge in-stock">AVAILABLE</span>
                            <% } else if (sizeData.quantity > 0) { %>
                                <span class="stock-badge low-stock">LIMITED</span>
                            <% } else { %>
                                <span class="stock-badge out-of-stock">SOLD OUT</span>
                            <% } %>
                            <% }); %>
                        </span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const slider = document.querySelector('.image-slider');
        const figures = slider.querySelectorAll('figure');
        const thumbnails = document.querySelectorAll('.thumbnails div');
        let current = 0;

        function showSlide(index) {
            figures[current].classList.remove('active');
            thumbnails[current].classList.remove('active');
            current = (index + figures.length) % figures.length;
            figures[current].classList.add('active');
            thumbnails[current].classList.add('active');
        }

        thumbnails.forEach((thumb, index) => {
            thumb.addEventListener('click', () => showSlide(index));
        });

        const qtyVal = document.getElementById('quantity');
        const decrease = document.querySelector('.decrease');
        const increase = document.querySelector('.increase');

        decrease.addEventListener('click', (e) => {
            e.preventDefault();
            let value = parseInt(qtyVal.textContent);
            if (value > 1) qtyVal.textContent = value - 1;
        });

        increase.addEventListener('click', (e) => {
            e.preventDefault();
            let value = parseInt(qtyVal.textContent);
            qtyVal.textContent = value + 1;
        });

        const zoomContainers = document.querySelectorAll('.zoom-container');
        
        zoomContainers.forEach(container => {
            const img = container.querySelector('img');
            const lens = container.querySelector('.zoom-lens');
            const zoomedImage = container.querySelector('.zoomed-image');
            
            function getZoomRatio() {
                return img.naturalWidth / img.width;
            }
            
            function initZoom() {
                zoomedImage.style.backgroundImage = `url('${img.src}')`;
                zoomedImage.style.backgroundSize = `${img.width * getZoomRatio()}px ${img.height * getZoomRatio()}px`;
                
                container.addEventListener('mouseenter', function() {
                    lens.style.display = 'block';
                    zoomedImage.style.display = 'block';
                });
                
                container.addEventListener('mouseleave', function() {
                    lens.style.display = 'none';
                    zoomedImage.style.display = 'none';
                });
                
                container.addEventListener('mousemove', function(e) {
                    let pos = getCursorPos(e);
                    
                    let x = pos.x - (lens.offsetWidth / 2);
                    let y = pos.y - (lens.offsetHeight / 2);
                    
                    if (x > img.width - lens.offsetWidth) {x = img.width - lens.offsetWidth;}
                    if (x < 0) {x = 0;}
                    if (y > img.height - lens.offsetHeight) {y = img.height - lens.offsetHeight;}
                    if (y < 0) {y = 0;}
                    
                    lens.style.left = x + "px";
                    lens.style.top = y + "px";
                    
                    let ratio = getZoomRatio();
                    zoomedImage.style.backgroundPosition = `-${x * ratio}px -${y * ratio}px`;
                });
                
                function getCursorPos(e) {
                    let rect = img.getBoundingClientRect();
                    let x = e.pageX - rect.left - window.pageXOffset;
                    let y = e.pageY - rect.top - window.pageYOffset;
                    return {x, y};
                }
            }
            
            if (img.complete) {
                initZoom();
            } else {
                img.addEventListener('load', initZoom);
            }
        });
        
        const zoomIcon = document.querySelector('.zoom-icon');
        const gallery = document.querySelector('.gallery');
        let isFullscreen = false;
        
        zoomIcon.addEventListener('click', () => {
            if (!isFullscreen) {
                gallery.style.position = 'fixed';
                gallery.style.top = '0';
                gallery.style.left = '0';
                gallery.style.width = '100vw';
                gallery.style.height = '100vh';
                gallery.style.zIndex = '9999';
                gallery.style.padding = '40px';
                gallery.style.backgroundColor = 'rgba(255, 255, 255, 0.98)';
                gallery.style.display = 'flex';
                gallery.style.flexDirection = 'column';
                gallery.style.justifyContent = 'center';
                zoomIcon.innerHTML = '<i class="fas fa-times"></i>';
                isFullscreen = true;
            } else {
                gallery.style.position = 'relative';
                gallery.style.top = 'auto';
                gallery.style.left = 'auto';
                gallery.style.width = 'auto';
                gallery.style.height = 'auto';
                gallery.style.zIndex = 'auto';
                gallery.style.padding = '0';
                gallery.style.backgroundColor = 'transparent';
                gallery.style.display = 'block';
                zoomIcon.innerHTML = '<i class="fas fa-expand"></i>';
                isFullscreen = false;
            }
        });
    });

    let selectedSize = null;
    let selectedSizeQuantity = null;

    // Function to handle size selection
    function selectSize(button) {
        // Remove active class from all size buttons
        document.querySelectorAll('.size-option').forEach(btn => {
            btn.classList.remove('active-size');
        });

        // Add selected styles to the clicked button
        button.classList.add('active-size');

        // Store selected size and its quantity
        selectedSize = button.getAttribute('data-size');
        selectedSizeQuantity = button.getAttribute('data-quantity');
    }
  
    // Modify addToCart to include size selection
    async function addToCart(event, productId, productPrice) {
        event.preventDefault();
        event.stopPropagation();

        if (!selectedSize) {
            Swal.fire({
                icon: 'warning',
                title: 'Select Size',
                text: 'Please select a size before adding to your shopping bag.',
                position: 'top-end',
                toast: true,
                timer: 2000,
                showConfirmButton: false,
                background: '#f8f5f1',
                iconColor: '#c5a77b'
            });
            return;
        }

        const sizeQuantity = parseInt(selectedSizeQuantity);

        if (sizeQuantity <= 0) {
            Swal.fire({
                icon: 'error',
                title: 'Out of Stock',
                text: 'This size is currently unavailable.',
                position: 'top-end',
                toast: true,
                timer: 3000,
                showConfirmButton: false,
                background: '#f8f5f1',
                iconColor: '#9b9b9b'
            });
            return;
        }

        if (!productPrice || isNaN(productPrice)) {
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'Product price is unavailable.',
                position: 'top-end',
                toast: true,
                timer: 2000,
                showConfirmButton: false,
                background: '#f8f5f1',
                iconColor: '#9b9b9b'
            });
            return;
        }

        try {
            const response = await fetch('/addToCart', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ productId, productPrice, selectedSize, sizeQuantity }) 
            });

            const result = await response.json();
            if (response.ok) {
                Swal.fire({
                    icon: 'success',
                    title: 'Added to Bag',
                    text: result.message || 'Item added to your shopping bag.',
                    position: 'top-end',
                    toast: true,
                    timer: 2000,
                    showConfirmButton: false,
                    background: '#f8f5f1',
                    iconColor: '#c5a77b'
                });
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: result.message || 'Unable to add item to your shopping bag.',
                    position: 'top-end',
                    toast: true,
                    timer: 3000,
                    showConfirmButton: false,
                    background: '#f8f5f1',
                    iconColor: '#9b9b9b'
                });
            }
        } catch (error) {
            console.error('Error:', error);
            Swal.fire({
                icon: 'error',
                title: 'Authentication Required',
                text: 'Please sign in to add items to your shopping bag.',
                position: 'top-end',
                toast: true,
                timer: 3000,
                showConfirmButton: false,
                background: '#f8f5f1',
                iconColor: '#9b9b9b'
            });
        }
    }
</script>
