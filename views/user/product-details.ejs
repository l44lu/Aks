    transform-origin: center;
    perspective: 1000px;
    transform-style: preserve-3d;
}

/* Elegant Hover Effects */
.product-info::before {
    content: '';
    position: absolute;
    top: -20px;
    left: -20px;
    width: 60px;
    height: 60px;
    border-top: 1px solid #b8a484;
    border-left: 1px solid #b8a484;
    opacity: 0;
    transition: all 0.6s ease;
}

.product-info::after {
    content: '';
    position: absolute;
    bottom: 38px;
    right: 37px;
    width: 60px;
    height: 60px;
    border-bottom: 1px solid #b8a484;
    border-right: 1px solid #b8a484;
    opacity: 0;
    transition: all 0.6s ease;
}

.product-info:hover::before,
.product-info:hover::after {
    opacity: 1;
}

/* Responsive Design with Luxury Adjustments */
@media (max-width: 1200px) {
    .product-grid {
        gap: 60px;
    }
    
    .image-slider img {
        height: 600px;
    }
    
    .container {
        padding: 0 30px;
    }
}

@media (max-width: 992px) {
    .product-grid {
        grid-template-columns: 1fr;
        gap: 50px;
    }
    
    .product-section {
        padding: 60px 0;
    }
    
    .container {
        padding: 0 25px;
    }
    
    .thumbnails {
        justify-content: flex-start;
    }
}

.related-products {
    margin-top: 2rem;
    padding: 2rem 0;
    background-color: #f9f9f9;
}

.related-products .section-title {
    text-align: center;
    margin-bottom: 1.5rem;
    font-size: 1.75rem;
}

.product-slider {
    display: flex;
    justify-content: space-between;
    gap: 1rem;
}

.product-card {
    flex: 0 0 calc(25% - 1rem);
    border: 1px solid #e0e0e0;
    overflow: hidden;
    transition: transform 0.3s ease;
}

.product-card:hover {
    transform: scale(1.05);
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
}

.product-card .product-image {
    width: 100%;
    height: 250px;
    overflow: hidden;
}

.product-card .product-image img {
    width: 100%;
    height: 315px;
}

.product-card .product-details {
    padding: 1rem;
}

.product-card .product-name {
    font-size: 1rem;
    margin-bottom: 0.5rem;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.product-card .product-pricing {
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.product-card .sale-price {
    color: #000;
    font-weight: bold;
}

.product-card .regular-price {
    color: #888;
    text-decoration: line-through;
}

.product-card .offer-badge {
    background-color: #ff6b6b;
    color: white;
    padding: 0.25rem 0.5rem;
    font-size: 0.75rem;
}

.no-related-products {
    text-align: center;
    width: 100%;
    color: #888;
}

@media (max-width: 768px) {
    .product-slider {
        flex-wrap: nowrap;
    }

    .product-card {
        flex: 0 0 70%;
    }
}
