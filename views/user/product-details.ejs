<%- include("../../views/partials/user/header") %>

<style>
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    background-color: #f8f5f1;
    color: #212121;
    line-height: 1.6;
    font-weight: 300;
}

/* Refined breadcrumbs */
.breadcrumbs {
    padding: 20px 0;
    background-color: transparent;
    border-bottom: none;
}

.breadcrumbs .container {
    display: flex;
    align-items: center;
    max-width: 1440px;
    margin: 0 auto;
    padding: 0 80px;
}

.breadcrumb-list {
    display: flex;
    list-style: none;
    flex-wrap: wrap;
}

.breadcrumb-list li {
    display: flex;
    align-items: center;
    font-size: 0.65rem;
    text-transform: uppercase;
    letter-spacing: 2px;
}

.breadcrumb-list li:not(:last-child)::after {
    content: "/";
    margin: 0 12px;
    color: #9b9b9b;
}

.breadcrumb-list a {
    color: #9b9b9b;
    text-decoration: none;
    transition: color 0.3s;
}

.breadcrumb-list a:hover {
    color: #000000;
}

.breadcrumb-list li:last-child {
    color: #000000;
    font-weight: 500;
}

.product-section {
    padding: 60px 0 100px;
    position: relative;
    background-color: #f8f5f1;
}

.container {
    max-width: 1440px;
    margin: 0 auto;
    padding: 0 80px;
}

.product-grid {
    display: grid;
    grid-template-columns: 6fr 4fr;
    gap: 100px;
}

/* Gallery with luxury aesthetics */
.gallery {
    background-color: transparent;
    transition: all 0.4s ease;
    position: relative;
}

.main-image {
    position: relative;
    overflow: hidden;
}

/* Zoom feature */
.zoom-container {
    position: relative;
    cursor: crosshair;
}

.zoomed-image {
    position: absolute;
    top: 0;
    left: 110%;
    width: 300%;
    height: 300%;
    background-color: #ffffff;
    z-index: 100;
    overflow: hidden;
    display: none;
    box-shadow: 0 5px 25px rgba(0,0,0,0.08);
    border: 1px solid #f0f0f0;
}

.zoom-lens {
    position: absolute;
    border: 1px solid #c5a77b;
    background-color: rgba(197, 167, 123, 0.05);
    width: 100px;
    height: 100px;
    display: none;
}

.zoom-icon {
    position: absolute;
    top: 20px;
    right: 20px;
    background-color: rgba(255, 255, 255, 0.8);
    width: 50px;
    height: 50px;
    border-radius: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    z-index: 10;
}

.zoom-icon:hover {
    background-color: #000000;
    color: #ffffff;
}

.image-slider figure {
    display: none;
    opacity: 0;
    transition: opacity 0.5s ease;
}

.image-slider figure.active {
    display: block;
    opacity: 1;
}

.image-slider img {
    width: 100%;
    height: 800px;
    object-fit: cover;
    transition: transform 0.5s ease;
}

.thumbnails {
    display: flex;
    gap: 15px;
    margin-top: 30px;
    justify-content: flex-start;
    overflow-x: auto;
    scrollbar-width: none;
}

.thumbnails::-webkit-scrollbar {
    display: none;
}

.thumbnails div {
    width: 100px;
    height: 100px;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    opacity: 0.7;
    position: relative;
}

.thumbnails div::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 0;
    width: 0;
    height: 1px;
    background-color: #000;
    transition: width 0.3s ease;
}

.thumbnails div.active {
    opacity: 1;
}

.thumbnails div.active::after {
    width: 100%;
}

.thumbnails div:hover {
    opacity: 1;
}

.thumbnails img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

/* Product Info with luxury styling */
.product-info {
    padding: 40px 0;
}

.brand-name {
    font-size: 1rem;
    text-transform: uppercase;
    letter-spacing: 4px;
    margin-bottom: 30px;
    font-weight: 400;
    color: #000000;
}

.product-title {
    font-size: 2.2rem;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 20px;
    font-weight: 300;
    line-height: 1.2;
    position: relative;
    display: inline-block;
}

.price {
    display: flex;
    align-items: center;
    margin-bottom: 50px;
    font-family: 'Montserrat', sans-serif;
}

.price .current {
    font-size: 1.6rem;
    font-weight: 300;
    margin-right: 15px;
}

.price .old {
    font-size: 1rem;
    color: #9b9b9b;
    text-decoration: line-through;
    margin-right: 15px;
}

.price .offer {
    font-size: 0.7rem;
    color: #9b9b9b;
    padding: 6px 12px;
    border: 1px solid #9b9b9b;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: all 0.3s ease;
}

.description {
    color: #555555;
    font-size: 0.95rem;
    margin-bottom: 20px;
    line-height: 1.9;
    font-weight: 300;
    font-family: 'Montserrat', sans-serif;
}

.features {
    list-style: none;
    margin-bottom: 60px;
    border-top: 1px solid #e0e0e0;
    border-bottom: 1px solid #e0e0e0;
    padding: 30px 0;
}

.features li {
    padding-left: 30px;
    margin-bottom: 20px;
    font-size: 0.75rem;
    color: #555555;
    position: relative;
    text-transform: uppercase;
    letter-spacing: 2px;
    font-family: 'Montserrat', sans-serif;
}

.features li:last-child {
    margin-bottom: 0;
}

.features li i {
    position: absolute;
    left: 0;
    top: 4px;
    color: #c5a77b;
    font-size: 0.8rem;
}

/* Size Selection with luxury styling */
.size-section {
    margin-bottom: 60px;
}

.size-title {
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 25px;
    font-weight: 400;
    color: #121212;
    font-family: 'Montserrat', sans-serif;
}

.size-options {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
}

.size-option {
    min-width: 50px;
    height: 50px;
    border: 1px solid #e0e0e0;
    background-color: transparent;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    font-size: 0.7rem;
    transition: all 0.3s ease;
    position: relative;
    font-family: 'Montserrat', sans-serif;
    letter-spacing: 1px;
}

.size-option:hover {
    border-color: #000;
}

.size-option.active-size {
    border-color: #000000;
    background-color: #000000;
    color: #ffffff;
}

.stock {
    position: absolute;
    top: -8px;
    right: -8px;
    background: #c5a77b;
    color: white;
    font-size: 0.65rem;
    width: 18px;
    height: 18px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s;
}

.size-option:hover .stock {
    opacity: 1;
}

.actions {
    display: flex;
    align-items: center;
    gap: 20px;
    margin-bottom: 60px;
}

.quantity {
    display: flex;
    align-items: center;
    border: 1px solid #e0e0e0;
    width: 140px;
    height: 55px;
    font-family: 'Montserrat', sans-serif;
}

.quantity a {
    width: 45px;
    height: 55px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    color: #121212;
    transition: color 0.3s;
}

.quantity a:hover {
    color: #c5a77b;
}

.quantity span {
    flex: 1;
    text-align: center;
    font-size: 0.9rem;
}

.button-add-to-cart {
    background-color: #000000;
    color: white;
    border: none;
    height: 55px;
    padding: 0 40px;
    text-transform: uppercase;
    letter-spacing: 2px;
    font-size: 0.7rem;
    cursor: pointer;
    transition: background-color 0.3s ease;
    font-family: 'Montserrat', sans-serif;
    font-weight: 400;
}

.button-add-to-cart:hover {
    background-color: #c5a77b;
}

.button-wishlist {
    width: 55px;
    height: 55px;
    background-color: transparent;
    border: 1px solid #e0e0e0;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #121212;
    text-decoration: none;
    transition: all 0.3s ease;
    cursor: pointer;
}

.button-wishlist:hover {
    border-color: #c5a77b;
}

.button-wishlist:hover i {
    color: #c5a77b;
}

.meta {
    list-style: none;
    color: #9b9b9b;
    font-size: 0.7rem;
    margin-top: 60px;
    font-family: 'Montserrat', sans-serif;
}

.meta li {
    margin-bottom: 15px;
    display: flex;
}

.meta li strong {
    width: 120px;
    color: #121212;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 2px;
}

.meta a {
    color: #9b9b9b;
    text-decoration: none;
    transition: color 0.3s;
}

.meta a:hover {
    color: #c5a77b;
}

/* Stock badge with elegant styling */
.stock-badge {
    display: inline-block;
    padding: 4px 8px;
    font-size: 0.65rem;
    font-weight: 500;
    margin-left: 10px;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-family: 'Montserrat', sans-serif;
}

.in-stock {
    color: #34a853;
}

.low-stock {
    color: #c5a77b;
}

.out-of-stock {
    color: #9b9b9b;
}

.button-icon {
    margin-right: 8px;
}

/* Responsive Design */
