  background-color: #f8f7f5;
  font-family: "Nunito Sans", sans-serif;
}

.main {
  padding: 40px 0;
}

p {
  font-size: clamp(15px, 2vw, 17px);
  color: #2e2e2e;
  font-weight: 300;
  line-height: 1.6;
  margin: 0 0 18px 0;
}

.container {
  width: 100%;
  padding-right: 15px;
  padding-left: 15px;
