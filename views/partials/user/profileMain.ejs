}

.form-group {
  margin-bottom: clamp(20px, 2.8vw, 28px);
}

label {
  font-family: 'Montserrat', sans-serif;
  text-transform: uppercase;
  letter-spacing: clamp(1px, 0.2vw, 2px);
  font-size: clamp(10px, 1.2vw, 12px);
  color: #555;
  margin-bottom: clamp(8px, 1.2vw, 12px);
  display: block;
  font-weight: 500;
}

input, select, textarea {
  border: 1px solid #e0e0e0;
  padding: clamp(10px, 1.4vw, 14px) clamp(12px, 1.8vw, 18px);
  width: 100%;
  font-family: 'Nunito Sans', sans-serif;
  background-color: #f9f9f9;
  transition: all 0.3s ease;
  box-shadow: inset 0 1px 3px rgba(0, 0, 0, 0.05);
  font-size: clamp(14px, 1.5vw, 16px);
}

input:focus, select:focus, textarea:focus {
  border-color: #d4af37;
  outline: none;
  box-shadow: 0 0 0 3px rgba(212, 175, 55, 0.1);
  background-color: #fff;
}

.dashboard-icon {
  font-size: clamp(16px, 1.8vw, 18px);
  margin-right: clamp(8px, 1vw, 10px);
  vertical-align: middle;
}

.status-badge {
  display: inline-block;
  padding: clamp(4px, 0.5vw, 5px) clamp(8px, 1.2vw, 12px);
  font-size: clamp(10px, 1.2vw, 12px);
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.status-active {
  background-color: rgba(39, 174, 96, 0.1);
  color: #27ae60;
}

.status-pending {
  background-color: rgba(241, 196, 15, 0.1);
  color: #f1c40f;
}

.mobile-menu-toggle {
  display: none;
  background: #1a1a1a;
  color: #fff;
  border: none;
  padding: 10px 15px;
  font-size: 16px;
  cursor: pointer;
  width: 100%;
  text-align: left;
  font-family: 'Montserrat', sans-serif;
  text-transform: uppercase;
  letter-spacing: 1px;
  position: relative;
  margin-bottom: 15px;
}

.mobile-menu-toggle::after {
  content: '\25BC';
  position: absolute;
  right: 15px;
  transition: transform 0.3s ease;
}

.mobile-menu-toggle.active::after {
  transform: rotate(180deg);
}

@media (max-width: 1199px) {
  .main {
    padding: 30px 0;
  }
  
  .card {
    width: 100%;
  }
}

@media (max-width: 991px) {
  .col-lg-10.m-auto {
    max-width: 95%;
  }
  
  .dashboard-menu {
    margin-bottom: 30px;
  }
}

@media (max-width: 767px) {
  .mobile-menu-toggle {
    display: block;
  }
  
  .dashboard-menu .nav {
    display: none;
  }
  
  .dashboard-menu.open .nav {
    display: block;
  }
  
  .col-md-4 {
    width: 100%;
    margin-bottom: 20px;
  }
  
  .breadcrumb {
    flex-wrap: wrap;
    justify-content: center;
  }
  
  .dashboard-menu .nav-link {
    padding: 10px 15px;
    font-size: 13px;
  }
  
  .btn {
    padding: 10px 18px;
    font-size: 11px;
    width: 100%;
    margin-bottom: 10px;
  }
  
  .card-body {
    padding: 20px 15px;
  }
  
  table {
    display: block;
    overflow-x: auto;
    white-space: nowrap;
  }
  
  table th, table td {
    padding: 12px 10px;
  }
}

@media (max-width: 576px) {
  .page-header.breadcrumb-wrap {
    padding: 8px 0;
  }
  
  .breadcrumb {
    font-size: 10px;
    letter-spacing: 1px;
  }
  
  .breadcrumb span {
    margin: 0 3px;
  }
  
  .breadcrumb a {
    margin: 0 5px;
  }
  
  .card-header {
    padding: 15px;
    font-size: 13px;
  }
  
  input, select, textarea {
    padding: 10px 12px;
  }
  
  .form-group {
    margin-bottom: 15px;
  }
  
  p {
    font-size: 15px;
    margin-bottom: 12px;
  }
  
  .pt-10, .pb-10 {
    padding-top: 20px;
    padding-bottom: 20px;
  }
}

.pt-10 {
  padding-top: clamp(20px, 3vw, 40px);
}

.pb-10 {
  padding-bottom: clamp(20px, 3vw, 40px);
}
</style>
<script>
  document.addEventListener('DOMContentLoaded', function() {
  const dashboardMenu = document.querySelector('.dashboard-menu');
  const mobileToggle = document.createElement('button');
  mobileToggle.className = 'mobile-menu-toggle';
  mobileToggle.textContent = 'Dashboard Menu';
  
  if (dashboardMenu) {
    dashboardMenu.insertBefore(mobileToggle, dashboardMenu.firstChild);
    
    mobileToggle.addEventListener('click', function() {
      dashboardMenu.classList.toggle('open');
      mobileToggle.classList.toggle('active');
    });
    
    window.addEventListener('resize', function() {
      if (window.innerWidth > 767) {
        dashboardMenu.classList.remove('open');
        mobileToggle.classList.remove('active');
      }
    });
  }
});
</script>

