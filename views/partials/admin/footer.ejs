<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>
    $(document).ready(function() {
        $('.dropdown-toggle').click(function(e) {
            e.preventDefault();
            $(this).next('.dropdown-menu').toggle();
        });
    });

        // Document ready function
        document.addEventListener('DOMContentLoaded', function() {
        // Hamburger menu toggle
        const hamburgerMenu = document.querySelector('.hamburger-menu');
        const navbarAside = document.querySelector('.navbar-aside');
        const overlay = document.querySelector('.overlay');
        const body = document.body;
        
        hamburgerMenu.addEventListener('click', function() {
            // Toggle active classes
            this.classList.toggle('active');
            navbarAside.classList.toggle('active');
            overlay.classList.toggle('active');
            body.classList.toggle('sidebar-active');
        });
        
        // Close sidebar when clicking overlay
        overlay.addEventListener('click', function() {
            hamburgerMenu.classList.remove('active');
            navbarAside.classList.remove('active');
            overlay.classList.remove('active');
            body.classList.remove('sidebar-active');
        });
        
        // Dropdown handling for user menu
        const dropdownToggle = document.querySelector('.dropdown-toggle');
        const dropdownMenu = document.querySelector('.dropdown-menu');
        
        // Optional: Close dropdown when clicking outside
        document.addEventListener('click', function(event) {
            if (!dropdownToggle.contains(event.target) && !dropdownMenu.contains(event.target)) {
                dropdownMenu.style.display = 'none';
            }
        });
        
        // Highlight active menu item based on current URL
        const currentLocation = window.location.pathname;
        const menuLinks = document.querySelectorAll('.menu-link');
        
        menuLinks.forEach(link => {
            if (link.getAttribute('href') === currentLocation) {
                link.classList.add('active');
            }
        });
        
        // Initialize any third-party plugins or components
        // For example, if using SweetAlert2 for notifications:
        function showNotification(message, type = 'success') {
            Swal.fire({
                text: message,
                icon: type,
                toast: true,
                position: 'top-end',
                showConfirmButton: false,
                timer: 3000
            });
        }
        
        // Example: Welcome message for admin (can be removed in production)
        // setTimeout(() => {
        //     showNotification('Welcome to the Admin Dashboard!');
        // }, 1000);
        
        // Add event listener for logout confirmation
        const logoutLink = document.querySelector('.dropdown-item.text-danger');
        if (logoutLink) {
            logoutLink.addEventListener('click', function(e) {
                e.preventDefault();
                Swal.fire({
                    title: 'Logout',
                    text: 'Are you sure you want to logout?',
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonText: 'Yes, logout',
                    cancelButtonText: 'Cancel'
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = this.getAttribute('href');
                    }
                });
            });
        }
    });
    

    
</script>
</body>
