<%- include("../../views/partials/admin/header") %>

<body>
  <!-- Breadcrumb -->
  <div class="breadcrumb">
    <a href="/admin">Dashboard</a>
    <span>›</span>
    <a href="/admin/products">Products</a>
    <span>›</span>
    <span>Orders</span>
  </div>

  <div class="orders-container">
    <div class="page-header">
      <h1 class="page-title" style="padding-left:55px">Orders</h1>

      <!-- Search Bar -->
      <div class="input-group input-group-sm border border-1 border-grey rounded-pill" style="width: 500px; margin-left: 545px">
        <input type="text" class="form-control border-0 rounded-pill mt-3" placeholder="Search Orders" name="search"/>
        <button class="btn" type="submit">Search</button>
      </div>
    </div>

    <div class="orders-table">
      <table class="table">
        <thead>
          <tr>
            <th>Order ID</th>
            <th>User Name</th>
            <th>Date</th>
            <th>Total Amount</th>
            <th>Status</th>
            <th>Payment Method</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% orders.forEach(function(order) { %>
          <tr>
            <td class="order-id"><%= order.orderId %></td>
            <td><%= order.userName %></td>
            <td><%= new Date(order.date).toLocaleDateString('en-IN') %></td>
            <td class="rupee-symbol"><%= (order.totalAmount || 0).toFixed(2) %></td>
            <td>
              <span class="status-badge status-<%= order.status.toLowerCase() %>">
                <%= order.status %>
              </span>
            </td>
            <td><%= order.paymentMethod %></td>
            <td>
                <button class="btn btn-primary" style="width: 80px;">
                    <a href="/admin/orderDetailsAdmin/<%= order.orderId %>" class="action-button">
                        View
                    </a>
                </button>


            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Pagination -->
  <div class="container">
    <nav aria-label="Page navigation">
      <ul class="pagination">
        <% for (let i = 1; i <= totalPages; i++) { %>
        <li class="page-item <%= (i === currentPage) ? 'active' : '' %>">
          <a class="page-link <%= (i === currentPage) ? 'bg-indigo-600 text-white' : 'bg-gray-300' %>" 
             href="?page=<%= i %>">
            <%= i %>
          </a>
        </li>
        <% } %>
      </ul>
    </nav>
  </div>

  <script>
    // Live search functionality
    document.querySelector('.search-box input').addEventListener('input', function(e) {
      const searchTerm = e.target.value.toLowerCase();
      const rows = document.querySelectorAll('tbody tr');
      
      rows.forEach(row => {
        const text = row.textContent.toLowerCase();
        row.style.display = text.includes(searchTerm) ? '' : 'none';
      });
    });
  </script>

  <%- include("../../views/partials/admin/footer") %>
</body>